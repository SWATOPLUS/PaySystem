@model PaySystem.Models.BusinessModels.Check

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Check</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Period)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Period)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Worker)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Worker.Name)
        </dd>
        @foreach (var x in Model.FeeInfos)
    {
        <dt>
            @x.Name
        </dt>
        <dd>
            @x.Amount
        </dd>
}
        <dt>
            
        </dt>
        <dd>
            _________________________________
        </dd>
        <dt>
            Total Fee
        </dt>
        <dd>
            @Model.FeeInfos.Sum(x=> x.Amount)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
